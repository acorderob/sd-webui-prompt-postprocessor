    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Attach using Process Id",
            "type": "debugpy",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/tests.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}